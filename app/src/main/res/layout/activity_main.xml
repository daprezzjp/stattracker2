<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dapre.stattracker.MainActivity">

    <Button
        android:text="Walks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnWalks"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnHits"
        android:layout_alignStart="@+id/btnHits" />

    <Button
        android:text="Hits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHits"
        android:layout_above="@+id/btnWalks"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnHits"
        android:layout_alignStart="@+id/btnHits"
        android:layout_marginTop="54dp"
        android:id="@+id/txtTest" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnHits"
        android:layout_toLeftOf="@+id/btnWalks"
        android:layout_toStartOf="@+id/btnWalks"
        android:id="@+id/hitsMin" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnHits"
        android:layout_toRightOf="@+id/btnWalks"
        android:layout_toEndOf="@+id/btnWalks"
        android:id="@+id/hitsAdd" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnWalks"
        android:layout_toStartOf="@+id/btnWalks"
        android:id="@+id/walksMin" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hitsAdd"
        android:layout_toRightOf="@+id/btnWalks"
        android:layout_toEndOf="@+id/btnWalks"
        android:id="@+id/walksAdd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnWalks"
        android:layout_toRightOf="@+id/walksMin"
        android:layout_toEndOf="@+id/walksMin"
        android:id="@+id/btnSo"
        android:text="SO" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnWalks"
        android:layout_alignLeft="@+id/walksMin"
        android:layout_alignStart="@+id/walksMin"
        android:id="@+id/soMin" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSo"
        android:layout_alignLeft="@+id/soMin"
        android:layout_alignStart="@+id/soMin"
        android:id="@+id/rbiMin" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walksAdd"
        android:layout_toRightOf="@+id/btnSo"
        android:layout_toEndOf="@+id/btnSo"
        android:id="@+id/soAdd" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soAdd"
        android:layout_toRightOf="@+id/btnRbi"
        android:layout_toEndOf="@+id/btnRbi"
        android:id="@+id/rbiAdd" />

    <Button
        android:text="RBI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRbi"
        android:layout_alignBaseline="@+id/rbiMin"
        android:layout_alignBottom="@+id/rbiMin"
        android:layout_toRightOf="@+id/soMin"
        android:layout_toEndOf="@+id/soMin" />

</RelativeLayout>
